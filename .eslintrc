{
  "extends": [
    "react-app",
    "react-app/jest",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "max-len": 0,
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "jsxSingleQuote": true,
        "semi": false,
        "printWidth": 100,
        "endOfLine": "auto",
        "tabWidth": 2
      }
    ]
  },
  "plugins": [
    "jsx-a11y"
  ]
}